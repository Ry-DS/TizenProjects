var coords;//global coords var. Should have coords of user if found
(function(){//keep vars here in local scope
	$('#nearbyList').html('<li class=\"ui-li-grid\"> <div>Finding your Location</div> <div class=\"ui-processing\"></div></li>');//processing animation
	let id=setInterval(()=>{
		navigator.geolocation.getCurrentPosition((pos)=>{
			coords=pos.coords;
			clearInterval(id);
			$('#nearbyList').html('<li><a id=\"refreshNearby\">Refresh</a></li>');
			document.getElementById("nearbyList").onclick=()=>{
				reloadJs('js/location.js');
				
			}
			
		
		},()=>{
			$('#nearbyList').html('<li class=\"li-has-multiline\">Failed to find Location<span class=\"ui-li-sub-text li-text-sub\">Retrying in 3 seconds...</span></li>');
			
		},{timeout: 7000});
	
	},10000);
	
	
})();
